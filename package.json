{
  "name": "libra-world-uikit",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna exec -- rm -rf dist -- rm -rf es",
    "prepare": "yarn build:cjs && yarn build:esm",
    "build:cjs": "NODE_ENV=cjs lerna exec -- babel src --out-dir dist --root-mode upward",
    "build:esm": "NODE_ENV=esm lerna exec -- babel src -d es --root-mode upward",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-styled-components": "^1.10.6",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  }
}
